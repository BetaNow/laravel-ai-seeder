{
    "preset": "laravel",
    "rules": {
        "phpdoc_align": true,
        "phpdoc_summary": true,
        "single_quote": false,
        "array_syntax": [
            "short"
        ],
        "no_unused_imports": true,
        "ordered_imports": true,
        "phpdoc_order": true,
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        }
    }
}
